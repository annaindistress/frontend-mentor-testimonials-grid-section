.testimonials
    padding 24px 24px 0

    &__list
        display grid
        gap 24px
        margin 0
        padding 0
        list-style none

@media (min-width: 1200px)
    .testimonials
        display grid
        justify-content center
        align-items center
        height 100%

        &__list
            grid-template-columns repeat(4, 1fr)
            grid-template-rows repeat(2, 1fr)
            width 1110px

        &__item
            &:first-of-type
                grid-column 1 / 3

            &:nth-last-of-type(2)
                grid-column 2 / 4

            &:last-of-type
                grid-column 4 / 5
                grid-row 1 / -1
